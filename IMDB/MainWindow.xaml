<Window x:Class="IMDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMDB"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Title="IMDB Search App" Height="800" Width="1200">
    <Border CornerRadius="40" Style="{StaticResource MainFrame}">
        <StackPanel Orientation="Horizontal">
            <!-- Navbar Menu -->
            <Menu DockPanel.Dock="Top" Style="{StaticResource MainMenu}">
                <MenuItem Header="Program" Style="{StaticResource MainMenuItem}">
                    <MenuItem Header="Exit" Command="{Binding CloseCommand}" />
                </MenuItem>
                <MenuItem Header="Navigate" Style="{StaticResource MainMenuItem}">
                    <MenuItem Header="TV Shows" Command="{Binding ShowTVShowsCommand}" />
                    <MenuItem Header="Actors" Command="{Binding ShowActorsCommand}" />
                    <MenuItem Header="Tracks" Command="{Binding ShowGenresCommand}" />
                </MenuItem>
            </Menu>
            <!-- Close button -->
            <Button Style="{StaticResource ControlButton}" Content="X" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Border>
</Window>