<UserControl x:Class="IMDB.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Margin="20">
            <TextBlock Style="{StaticResource MainTitle}">IMDB</TextBlock>
            <TextBlock Style="{StaticResource SubMainTitle}">Search App</TextBlock>

            <!-- Search Section -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
                <TextBox x:Name="SearchBox" 
                         Style="{StaticResource SearchBox}" 
                         Width="400"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Search" 
                        Command="{Binding SearchCommand}"
                        CommandParameter="{Binding Text, ElementName=SearchBox}"
                        Margin="10,0,0,0"
                        Padding="20,5"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Top Movies" 
                        Command="{Binding LoadTopMoviesCommand}"
                        Margin="0,0,10,0"
                        Padding="20,5"/>
                <Button Content="Load More" 
                        Command="{Binding LoadMoreCommand}"
                        Padding="20,5"/>
            </StackPanel>

            <!-- Results List -->
            <ListView ItemsSource="{Binding FilteredTitles}" 
                      Margin="0,20,0,0"
                      Height="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding PrimaryTitle}" 
                                       FontWeight="Bold"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding Rating.AverageRating, StringFormat='Rating: {0}'}"
                                       FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </StackPanel>
</UserControl>